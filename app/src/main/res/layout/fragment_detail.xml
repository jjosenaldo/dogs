<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="dog"
            type="com.example.dogs.model.DogBreed" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dogImageView"
            android:imageUrl='@{dog.imageUrl ?? ""}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:minHeight="200dp"/>

        <TextView
            android:id="@+id/dogNameView"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_below="@+id/dogImageView"
            android:text="@{dog.dogBreed}" />

        <TextView
            android:id="@+id/dogPurposeView"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_below="@+id/dogNameView"
            android:text="@{dog.bredFor}" />

        <TextView
            android:id="@+id/dogTemperamentView"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_below="@+id/dogPurposeView"
            android:text="@{dog.temperament}" />

        <TextView
            android:id="@+id/dogLifespanView"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_below="@+id/dogTemperamentView"
            android:text="@{dog.lifeSpan}" />
    </RelativeLayout>

</layout>

